            data-test="article-checklist-banner-link">
            <span class="c-card-service__link-text">Use our pre-submission checklist</span>
            <svg class="c-card-service__link-icon" aria-hidden="true" focusable="false"><use xlink:href="#icon-eds-i-arrow-right-small"></use></svg>
